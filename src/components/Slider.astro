    src: "css3.svg",
  },
  {
    title: "JavaScript",
    src: "javascript.svg",
  },
  {
    title: "TypeScript",
    src: "typescript.svg",
  },
  {
    title: "Tailwind",
    src: "tailwindcss.svg",
  },
  {
    title: "Bootstrap",
    src: "bootstrap.svg",
  },
  {
    title: "Astro",
    src: "astro.svg",
  },
  {
    title: "React",
    src: "react.svg",
  },
  {
    title: "Vue",
    src: "vue.svg",
  },
  {
    title: "Next",
    src: "nextjs.svg",
  },
  {
    title: "Nuxt",
    src: "nuxt.svg",
  },
